<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.venue.VenueActivity">


    <EditText
        android:id="@+id/search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:foregroundTint="@color/primaryTextColor"
        android:hint="@string/city_state_country_id"
        android:inputType="textPersonName"
        android:shadowColor="#FFFFFF"
        android:text="Search by  "
        android:textColor="@color/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.355" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="@string/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="426dp"
        android:layout_height="114dp"
        android:background="#000000"
        app:chipSpacing="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641"
        android:layout_alignParentEnd="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/city_chip"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@color/secondaryLightColor"
            android:checkable="true"
            android:fontFamily="sans-serif"
            android:padding="12dp"
            android:text="@string/city"
            android:textAlignment="center"
            android:textColor="@color/primaryLightColor"

            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/secondaryLightColor"
            app:chipCornerRadius="5dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/state_chip"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="75dp"
            android:layout_height="44dp"
            android:background="@color/secondaryLightColor"
            android:checkable="true"
            android:fontFamily="sans-serif"
            android:padding="12dp"
            android:text="@string/state"
            android:textAlignment="center"
            android:textColor="@color/primaryLightColor"

            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/secondaryLightColor"
            app:chipCornerRadius="5dp"
            tools:text="STATE" />

        <com.google.android.material.chip.Chip
            android:id="@+id/country_chip"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="105dp"
            android:layout_height="55dp"
            android:checkable="true"
            android:fontFamily="sans-serif"
            android:text="@string/country"
            android:textAlignment="center"
            android:textColor="@color/primaryLightColor"

            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/secondaryLightColor"
            app:chipCornerRadius="5dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/id_chip"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checkable="true"
            android:clickable="false"
            android:fontFamily="sans-serif"
            android:text="@string/id_chip"
            app:chipMinHeight="20dp"
            android:textAlignment="center"
            android:textColor="@color/primaryLightColor"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/secondaryLightColor"
            app:chipCornerRadius="5dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/keyword_chip"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checkable="true"
            android:text="@string/keyword"
            android:textAlignment="center"
            app:checkedIconVisible="true" />
    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>